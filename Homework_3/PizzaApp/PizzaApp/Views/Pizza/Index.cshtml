@using PizzaApp.Models.Domain
    @model List<PizzaApp.Models.ViewModels.PizzaViewModel>

    <h2>These are our pizzas:</h2>

    @for (int i = 0; i < Model.Count(); i++) //Model == List<Pizza>
    {
        <p>@Model[i].PizzaName - @Model[i].Price</p>
    }

    @for(int i=0; i<Model.Count(); i++)
                {
                    <partial name="~/Views/Shared/Partials/_PizzaDetailsPartial.cshtml" for="@Model[i]"/>

                }


